@model WebApp.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Welcome";
    Layout = "_LayoutLogin";
}

<div class="login-container">
    <div class="sun"></div>
    <div class="palm-trees"></div>
    
    <div class="login-box">
        <div class="login-header">
            <h1>Join Us</h1>
            <p>Create your account to help reduce food waste at Avans</p>
        </div>

        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="confirm password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <label asp-for="DateOfBirth">Date of Birth</label>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsStudent" class="form-check-input" checked />
                    <label class="form-check-label" asp-for="IsStudent">Register as Student</label>
                </div>
            </div>

            <div id="studentFields">
                <div class="form-floating mb-3">
                    <input asp-for="StudentNumber" class="form-control" placeholder="Student Number" />
                    <label asp-for="StudentNumber">Student Number</label>
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="StudyCity" class="form-select">
                        <option value="">Select a city</option>
                        <option value="Breda">Breda</option>
                        <option value="DenBosch">Den Bosch</option>
                        <option value="Tilburg">Tilburg</option>
                    </select>
                    <label asp-for="StudyCity">Study City</label>
                    <span asp-validation-for="StudyCity" class="text-danger"></span>
                </div>
            </div>

            <div id="employeeFields" style="display: none;">
                <div class="form-floating mb-3">
                    <input asp-for="EmployeeNumber" class="form-control" placeholder="Employee Number" />
                    <label asp-for="EmployeeNumber">Employee Number</label>
                    <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="CafeteriaLocation" class="form-select">
                        <option value="">Select a location</option>
                        <option value="LA">Lovensdijkstraat A</option>
                        <option value="LD">Lovensdijkstraat D</option>
                        <option value="HA">Hogeschoollaan A</option>
                        <option value="HB">Hogeschoollaan B</option>
                        <option value="DB">Den Bosch</option>
                        <option value="TB">Tilburg</option>
                    </select>
                    <label asp-for="CafeteriaLocation">Cafeteria Location</label>
                    <span asp-validation-for="CafeteriaLocation" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-login">Create Account</button>
            
            <div class="register-link">
                <p>
                    Already have an account? <a asp-action="Login">Sign in</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#IsStudent').change(function() {
                if(this.checked) {
                    $('#studentFields').slideDown();
                    $('#employeeFields').slideUp();
                } else {
                    $('#studentFields').slideUp();
                    $('#employeeFields').slideDown();
                }
            });
        });
    </script>
}
