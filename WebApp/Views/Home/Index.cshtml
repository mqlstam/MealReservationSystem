@{
ViewData["Title"] = "Home Page";
}

<style>
    .home-container {
        min-height: calc(100vh - 180px);
        background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 50%, #fce4ec 100%);
        padding: 2rem 1rem;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .packages-icon {
        background: linear-gradient(135deg, #2196f3, #1976d2);
    }

    .reservations-icon {
        background: linear-gradient(135deg, #9c27b0, #7b1fa2);
    }

    .stats-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-top: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: bold;
        color: #2e7d32;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.75rem;
    }

    .custom-btn {
        padding: 0.5rem 1.25rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-blue {
        background: linear-gradient(135deg, #2196f3, #1976d2);
        border: none;
        color: white;
    }

    .btn-purple {
        background: linear-gradient(135deg, #9c27b0, #7b1fa2);
        border: none;
        color: white;
    }

    .custom-btn:hover {
        opacity: 0.9;
        color: white;
    }
</style>

<div class="home-container">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 mb-3">Welcome to Meal Reservation</h1>
            <p class="lead">Help reduce food waste at Avans while enjoying discounted meals</p>
        </div>

        <div class="row g-4">
            <!-- Available Packages Card -->
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="icon-circle packages-icon">
                        <i class="bi bi-basket text-white fs-4"></i>
                    </div>
                    <h2 class="card-title text-center">Available Packages</h2>
                    <p class="text-muted text-center mb-4">Browse and reserve discounted meal packages from our cafeterias</p>
                    <div class="text-center">
                        <a asp-controller="Reservation" asp-action="Available" class="custom-btn btn-blue text-decoration-none">
                            View Available Packages
                        </a>
                    </div>
                </div>
            </div>

            <!-- My Reservations Card -->
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="icon-circle reservations-icon">
                        <i class="bi bi-calendar-check text-white fs-4"></i>
                    </div>
                    <h2 class="card-title text-center">My Reservations</h2>
                    <p class="text-muted text-center mb-4">View and manage your reserved meal packages</p>
                    <div class="text-center">
                        <a asp-controller="Reservation" asp-action="MyReservations" class="custom-btn btn-purple text-decoration-none">
                            View My Reservations
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-card">
            <h3 class="text-center mb-4">Help Us Reduce Food Waste</h3>
            <div class="row text-center">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="stat-value">30%</div>
                    <p class="text-muted">Average Discount</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="stat-value">20+</div>
                    <p class="text-muted">Daily Packages Saved</p>
                </div>
                <div class="col-md-4">
                    <div class="stat-value">3</div>
                    <p class="text-muted">Participating Locations</p>
                </div>
            </div>
        </div>
    </div>
</div>