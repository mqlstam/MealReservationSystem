@model WebApp.Models.Package.CreatePackageViewModel

@{
    ViewData["Title"] = "Create Package";
}

<h1>Create Package</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City" class="form-control" asp-items="Html.GetEnumSelectList<Domain.Enums.City>()">
                    <option value="">Select City</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CafeteriaLocation" class="control-label"></label>
                <select asp-for="CafeteriaLocation" class="form-control" asp-items="Html.GetEnumSelectList<Domain.Enums.CafeteriaLocation>()">
                    <option value="">Select Location</option>
                </select>
                <span asp-validation-for="CafeteriaLocation" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PickupDateTime" class="control-label"></label>
                <input asp-for="PickupDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="PickupDateTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastReservationDateTime" class="control-label"></label>
                <input asp-for="LastReservationDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="LastReservationDateTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-control" asp-items="Html.GetEnumSelectList<Domain.Enums.MealType>()">
                    <option value="">Select Type</option>
                </select>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsAdultOnly" class="form-check-input" type="checkbox" />
                    <label asp-for="IsAdultOnly" class="form-check-label"></label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExampleProducts" class="control-label"></label>
                <div id="productsContainer">
                    <input type="text" class="form-control mb-2" name="ExampleProducts[0]" placeholder="Product name" />
                </div>
                <button type="button" class="btn btn-secondary" onclick="addProductField()">Add Product</button>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Manage" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let productIndex = 1;
        
        function addProductField() {
            const container = document.getElementById('productsContainer');
            const input = document.createElement('input');
            input.type = 'text';
            input.name = `ExampleProducts[${productIndex}]`;
            input.className = 'form-control mb-2';
            input.placeholder = 'Product name';
            container.appendChild(input);
            productIndex++;
        }
    </script>
}
