@model WebApp.Models.Package.PackageListViewModel
@{
    ViewData["Title"] = "Manage Packages";
}

<div class="container">
    <h1>Manage Packages</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">Create New Package</a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="CityFilter" class="form-label">City</label>
                            <select asp-for="CityFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.City>()" class="form-select">
                                <option value="">All Cities</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="TypeFilter" class="form-label">Meal Type</label>
                            <select asp-for="TypeFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.MealType>()" class="form-select">
                                <option value="">All Types</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="MaxPriceFilter" class="form-label">Max Price</label>
                            <input asp-for="MaxPriceFilter" type="number" step="0.01" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="ShowExpired" class="form-label">Show Expired</label>
                            <div class="form-check mt-2">
                                <input asp-for="ShowExpired" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="ShowExpired">Include expired packages</label>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary">Apply Filters</button>
            </form>
        </div>
    </div>

    @if (!Model.Packages.Any())
    {
        <div class="alert alert-info">
            No packages found matching your criteria.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Pickup Time</th>
                        <th>Last Reservation</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var package in Model.Packages)
                    {
                        <tr>
                            <td>@package.Name</td>
                            <td>@package.MealType</td>
                            <td>@package.Price.ToString("C")</td>
                            <td>@package.PickupDateTime.ToString("g")</td>
                            <td>@package.LastReservationDateTime.ToString("g")</td>
                            <td>
                                @if (package.IsPickedUp)
                                {
                                    <span class="badge bg-success">Picked Up</span>
                                }
                                else if (package.IsReserved)
                                {
                                    <span class="badge bg-primary">Reserved</span>
                                }
                                else if (package.HasExpired)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Available</span>
                                }
                            </td>
                            <td>
                                @if (package.IsReserved && !package.IsPickedUp && !package.HasExpired)
                                {
                                    <form asp-action="MarkAsPickedUp" asp-route-id="@package.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm">Mark Picked Up</button>
                                    </form>
                                }
                                @if (package.IsReserved && !package.IsPickedUp && package.HasExpired && !package.IsPickedUp)
                                {
                                    <form asp-action="MarkAsNoShow" asp-route-id="@package.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-warning btn-sm">Mark No-Show</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
