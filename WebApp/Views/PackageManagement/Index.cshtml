@model WebApp.Models.Package.PackageListViewModel

@{
    ViewData["Title"] = "Manage Packages";
    bool showOnlyMyCafeteria = ViewData["ShowOnlyMyCafeteria"] as bool? ?? false;
}

<div class="container">
    <h1>Manage Packages</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">Create New Package</a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="form-check mb-3">
                    <input type="checkbox"
                           class="form-check-input"
                           id="showOnlyMyCafeteria"
                           name="showOnlyMyCafeteria"
                           value="true"
                           @(showOnlyMyCafeteria ? "checked" : "") />
                    <label class="form-check-label" for="showOnlyMyCafeteria">
                        Show Only My Cafeteria
                    </label>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="CityFilter" class="form-label">City</label>
                            <select asp-for="CityFilter"
                                    asp-items="Html.GetEnumSelectList<Domain.Enums.City>()"
                                    class="form-select">
                                <option value="">All Cities</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="TypeFilter" class="form-label">Meal Type</label>
                            <select asp-for="TypeFilter"
                                    asp-items="Html.GetEnumSelectList<Domain.Enums.MealType>()"
                                    class="form-select">
                                <option value="">All Types</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="MaxPriceFilter" class="form-label">Max Price</label>
                            <input asp-for="MaxPriceFilter" type="number" step="0.01" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="ShowExpired" class="form-label">Show Expired</label>
                            <div class="form-check mt-2">
                                <input asp-for="ShowExpired" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="ShowExpired">
                                    Include expired packages
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary">Apply Filters</button>
            </form>
        </div>
    </div>

    @if (!Model.Packages.Any())
    {
        <div class="alert alert-info">
            No packages found matching your criteria.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Pickup Time</th>
                        <th>Last Reservation</th>
                        <th>Status</th>
                        <th>Reserved By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var package in Model.Packages)
                {
                    <tr>
                        <td>@package.Name</td>
                        <td>@package.MealType</td>
                        <td>@package.Price.ToString("C")</td>
                        <td>@package.PickupDateTime.ToString("g")</td>
                        <td>@package.LastReservationDateTime.ToString("g")</td>
                        <td>
                            @switch (package.Status)
                            {
                                case "No-Show":
                                    <span class="badge bg-danger">No-Show</span>;
                                    break;
                                case "Picked Up":
                                    <span class="badge bg-success">Picked Up</span>;
                                    break;
                                case "Expired":
                                    <span class="badge bg-secondary">Expired</span>;
                                    break;
                                case "Reserved":
                                    <span class="badge bg-primary">Reserved</span>;
                                    break;
                                default:
                                    <span class="badge bg-info">Available</span>;
                                    break;
                            }
                        </td>
                        <td>
                            @package.ReservedBy
                        </td>
                        <td>
                            @* 1) Edit/Delete only if package is still "Available" *@
                            @if (package.Status == "Available")
                            {
                                <a asp-action="Edit" asp-route-id="@package.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@package.Id" class="btn btn-danger btn-sm me-1">Delete</a>
                            }
                            @* 2) Mark Picked Up if itâ€™s "Reserved" but not picked up, and time not yet past? 
                                  Could do so if you want. We'll just keep as is. *@
                            @if (package.IsReserved && !package.IsPickedUp && !package.IsNoShow && package.PickupDateTime > DateTime.Now)
                            {
                                <form asp-action="MarkAsPickedUp"
                                      asp-route-id="@package.Id"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-success btn-sm me-1">
                                        Picked Up
                                    </button>
                                </form>
                            }

                            @* 3) Mark No-Show if time is past and not already a no-show/picked up *@
                            @if (package.IsReserved && !package.IsNoShow && !package.IsPickedUp && package.PickupDateTime < DateTime.Now)
                            {
                                <form asp-action="MarkAsNoShow"
                                      asp-route-id="@package.Id"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-warning btn-sm me-1">
                                        Mark No-Show
                                    </button>
                                </form>
                            }

                            @* 4) Undo No-Show button if currently no-show *@
                            @if (package.IsNoShow)
                            {
                                <form asp-action="UndoNoShow"
                                      asp-route-id="@package.Id"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-secondary btn-sm me-1">
                                        Undo No-Show
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
