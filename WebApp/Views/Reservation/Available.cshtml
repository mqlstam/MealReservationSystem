@model WebApp.Models.Reservation.AvailablePackagesViewModel
@{
    ViewData["Title"] = "Available Packages";
}

<div class="container">
    <h1>Available Packages</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Available" id="filterForm">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="CityFilter" class="form-label">City</label>
                            <select asp-for="CityFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.City>()" class="form-select">
                                <option value="">All Cities</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="TypeFilter" class="form-label">Meal Type</label>
                            <select asp-for="TypeFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.MealType>()" class="form-select">
                                <option value="">All Types</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="MaxPriceFilter" class="form-label">Max Price (â‚¬)</label>
                            <input asp-for="MaxPriceFilter" type="number" step="0.01" min="0" class="form-control" />
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary">Apply Filters</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">Clear Filters</button>
            </form>
        </div>
    </div>

    @if (!Model.Packages.Any())
    {
        <div class="alert alert-info">
            No packages available matching your criteria.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var package in Model.Packages)
            {
                <div class="col">
                    <div class="card h-100 @(package.HasExpired ? "border-danger" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@package.Name</h5>
                            <span class="badge @package.StatusBadgeClass">@package.StatusText</span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Location:</strong> @package.Location, @package.City<br />
                                <strong>Price:</strong> @package.Price.ToString("C")<br />
                                <strong>Type:</strong> @package.MealType<br />
                                <strong>Pickup:</strong> @package.PickupDateTime.ToString("g")<br />
                                <strong>Reserve Before:</strong> @package.LastReservationDateTime.ToString("g")
                            </p>

                            @if (package.IsAdultOnly)
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> 18+ Only
                                </div>
                            }

                            <div class="mt-3">
                                <h6>Example Products:</h6>
                                <ul class="list-unstyled">
                                    @foreach (var product in package.ExampleProducts)
                                    {
                                        <li><i class="bi bi-check2"></i> @product</li>
                                    }
                                </ul>
                            </div>

                            @if (!package.HasExpired && !package.PickupExpired)
                            {
                                @if (package.CanReserve)
                                {
                                    <form asp-action="Reserve" asp-controller="Package" asp-route-id="@package.Id" method="post">
                                        <button type="submit" class="btn btn-primary w-100">Reserve Package</button>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        @package.ReservationBlockReason
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    @if (package.HasExpired)
                                    {
                                        <span>Reservation period has ended</span>
                                    }
                                    else
                                    {
                                        <span>Pickup time has passed</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function clearFilters() {
            document.querySelector('select[name="CityFilter"]').value = '';
            document.querySelector('select[name="TypeFilter"]').value = '';
            document.querySelector('input[name="MaxPriceFilter"]').value = '';
            document.getElementById('filterForm').submit();
        }
        
        // Auto-refresh the page every minute to keep statuses current
        setTimeout(function() {
            location.reload();
        }, 60000);
    </script>
}
