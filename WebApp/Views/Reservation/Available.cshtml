@model WebApp.Models.Reservation.AvailablePackagesViewModel
@{
ViewData["Title"] = "Available Packages";
}

<style>
    .packages-container {
        min-height: calc(100vh - 180px);
        background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 50%, #fce4ec 100%);
        padding: 2rem 1rem;
    }

    .filter-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .package-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

    .package-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .package-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .package-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin: 0;
    }

    .package-type {
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
        background: #e3f2fd;
        color: #1976d2;
    }

    .package-details {
        margin-bottom: 1rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .detail-label {
        color: #666;
        font-weight: 500;
    }

    .detail-value {
        color: #333;
        font-weight: 600;
    }

    .products-list {
        background: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem;
        margin: 1rem 0;
    }

    .products-list h6 {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .products-list ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .products-list li {
        color: #666;
        margin-bottom: 0.25rem;
    }

    .adult-warning {
        background: #fff3e0;
        color: #e65100;
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin: 1rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .reserve-btn {
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: 0.5rem;
        background: linear-gradient(135deg, #2196f3, #1976d2);
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .reserve-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .reserve-btn:disabled {
        background: #ccc;
        cursor: not-allowed;
        transform: none;
    }

    .error-message {
        background: #ffebee;
        color: #c62828;
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin-top: 1rem;
    }
</style>

<div class="packages-container">
    <div class="container">
        <h1 class="text-center mb-4">Available Packages</h1>

        @if (TempData["Error"] != null)
        {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }

        <div class="filter-card">
            <h5 class="mb-3">Filter Packages</h5>
            <form method="get" asp-action="Available" id="filterForm">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="CityFilter" class="form-label">City</label>
                            <select asp-for="CityFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.City>()" class="form-select">
                                <option value="">All Cities</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="TypeFilter" class="form-label">Meal Type</label>
                            <select asp-for="TypeFilter" asp-items="Html.GetEnumSelectList<Domain.Enums.MealType>()" class="form-select">
                                <option value="">All Types</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="MaxPriceFilter" class="form-label">Maximum Price (â‚¬)</label>
                            <input asp-for="MaxPriceFilter" type="number" step="0.01" min="0" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">Clear Filters</button>
                </div>
            </form>
        </div>

        @if (!Model.Packages.Any())
        {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            No packages available matching your criteria.
        </div>
        }
        else
        {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var package in Model.Packages)
            {
            <div class="col">
                <div class="package-card">
                    <div class="package-header">
                        <h5 class="package-title">@package.Name</h5>
                        <span class="package-type">@package.MealType</span>
                    </div>

                    <div class="package-details">
                        <div class="detail-row">
                            <span class="detail-label">Price:</span>
                            <span class="detail-value">@package.Price.ToString("C")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Location:</span>
                            <span class="detail-value">@package.Location, @package.City</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Pickup:</span>
                            <span class="detail-value">@package.PickupDateTime.ToString("g")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Reserve Before:</span>
                            <span class="detail-value">@package.LastReservationDateTime.ToString("g")</span>
                        </div>
                    </div>

                    <div class="products-list">
                        <h6><i class="bi bi-box me-2"></i>Example Products:</h6>
                        <ul>
                            @foreach (var product in package.ExampleProducts)
                            {
                            <li>@product</li>
                            }
                        </ul>
                    </div>

                    @if (package.IsAdultOnly)
                    {
                    <div class="adult-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        18+ Only
                    </div>
                    }

                    @if (!package.HasExpired && !package.PickupExpired)
                    {
                    @if (package.CanReserve)
                    {
                    <form asp-action="Reserve" asp-controller="Package" asp-route-id="@package.Id" method="post">
                        <button type="submit" class="reserve-btn">
                            <i class="bi bi-bag-plus me-2"></i>Reserve Package
                        </button>
                    </form>
                    }
                    else
                    {
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        @package.ReservationBlockReason
                    </div>
                    }
                    }
                    else
                    {
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        @if (package.HasExpired)
                        {
                        <span>Reservation period has ended</span>
                        }
                        else
                        {
                        <span>Pickup time has passed</span>
                        }
                    </div>
                    }
                </div>
            </div>
            }
        </div>
        }
    </div>
</div>

@section Scripts {
<script>
    function clearFilters() {
        document.querySelector('select[name="CityFilter"]').value = '';
        document.querySelector('select[name="TypeFilter"]').value = '';
        document.querySelector('input[name="MaxPriceFilter"]').value = '';
        document.getElementById('filterForm').submit();
    }

    // Auto-refresh the page every minute to keep statuses current
    setTimeout(function() {
        location.reload();
    }, 60000);
</script>
}