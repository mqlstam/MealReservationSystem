@{
    ViewData["Title"] = "Oops! Slow Database";
}

<div class="container text-center mt-5">
    <div class="alert alert-info">
        <h2><i class="bi bi-hourglass-split"></i> Our Database is Taking a Coffee Break</h2>
        <p class="lead">The free database we're using is being a bit slow right now.</p>
        <hr>
        <div class="mb-3">
            <p>Don't worry! This happens sometimes with our free database plan. Just click refresh or try again in a moment.</p>
            <small class="text-muted">Usually it only takes a few seconds to wake up!</small>
        </div>
        
        <div class="mt-4">
            <a href="javascript:window.location.reload()" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-clockwise"></i> Refresh Page
            </a>
        </div>
    </div>
</div>
