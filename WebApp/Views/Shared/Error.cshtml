@{
var exceptionDetail = Context.Features.Get<Microsoft.AspNetCore.Diagnostics.IExceptionHandlerFeature>();
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
<p>
    <strong>Request ID:</strong> <code>@Model.RequestId</code>
</p>
}

@if (exceptionDetail != null)
{
<div class="alert alert-danger">
    <h4>Error Details:</h4>
    <p><strong>Exception: </strong> @exceptionDetail.Error.Message</p>
    <p><strong>Stack Trace:</strong> <pre>@exceptionDetail.Error.StackTrace</pre></p>
</div>
}